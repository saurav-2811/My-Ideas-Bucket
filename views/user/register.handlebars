<div class="card card-body mx-auto mt-4" style="width: 55%">
        <h3 class="text-center card-header">Account Register</h3>
        <form action="/user/register" method="POST">
            <div class="form-group mt-4">
            <label for="email">Name</label>
            <input class="form-control mt-1" type="text" name="name" value="{{name}}" placeholder="enter your name..." required>
        </div>
        <div class="form-group mt-4">
            <label for="email">Email</label>
            <input class="form-control mt-1" type="email" name="email" value="{{email}}" placeholder="enter your email..." required>
        </div>
         <div class="form-group mt-4">
            <label for="password">Password</label>
            <input class="form-control mt-1" type="password" name="password" value="{{password}}" placeholder="enter your password..." required>
        </div>
        <div class="form-group mt-4">
            <label for="password">Confirm-Password</label>
            <input class="form-control mt-1" type="password" name="password2" value="{{password2}}"placeholder="re-enter your password..." required>
        </div>
        <div class=" mt-4 mb-2">
        <input class="btn btn-block  btn-success" style="width: 100%" type="submit" name="submit" value="Sign-up" >
        </div>
              <p class="text-center">Already a member...?<a href="/user/login"> Log-in</a></p>
        </form>
</div>